category: Network
build-type: Simple
extra-doc-files: CHANGELOG.md

-- extra-source-files:
common warnings
  ghc-options: -Wall

library
  import: warnings
  exposed-modules: Effectful.Socket
  -- other-modules:
  -- other-extensions:
  build-depends:
    base <5,
    bytestring,
    effectful-core,
    network,

  hs-source-dirs: src
  default-language: GHC2021
